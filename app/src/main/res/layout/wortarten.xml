        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/frameLayout20"
            android:layout_centerHorizontal="true"
            android:background="#000000"
            android:id="@+id/frameLayout21"></FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/frameLayout21"
            android:layout_centerHorizontal="true"
            android:id="@+id/frameLayout22">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Wort4:"
                android:id="@+id/textView48"
                android:layout_gravity="left|center_vertical"
                android:textSize="40dp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:id="@+id/editText5"
                android:layout_gravity="right|center_vertical"
                android:textSize="35dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/frameLayout22"
            android:layout_centerHorizontal="true"
            android:background="#000000"
            android:id="@+id/frameLayout23"></FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/frameLayout23"
            android:layout_centerHorizontal="true"
            android:id="@+id/frameLayout24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Wort5:"
                android:id="@+id/textView49"
                android:layout_gravity="left|center_vertical"
                android:textSize="40dp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:id="@+id/editText6"
                android:layout_gravity="right|center_vertical"
                android:textSize="35dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/frameLayout24"
            android:layout_centerHorizontal="true"
            android:background="#000000"
            android:id="@+id/frameLayout25"></FrameLayout>

        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Eingabe Überprüfen!!"
            android:id="@+id/button2"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/frameLayout25"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PPPP"
            android:id="@+id/textView50"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:textSize="260dp"
            android:textColor="#01fffdfd"
            android:background="#01ffffff" />


    </RelativeLayout>


</ScrollView>