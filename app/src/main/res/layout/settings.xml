<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#11898080">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schwierigkeit:"
        android:id="@+id/settingsklasee"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/difficulty"
        android:textSize="40dp"
        android:background="#14ee11"
        android:layout_below="@+id/radioButton3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:text="Leicht" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Leicht"
        android:id="@+id/radioButton"
        android:layout_below="@+id/settingsklasee"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:background="#14ee11" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Mittel"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:background="#ebe719" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Schwer"
        android:id="@+id/radioButton3"
        android:layout_below="@+id/radioButton2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:background="#f90000"
        android:layout_marginBottom="10dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/difficulty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#000000"></FrameLayout>

</RelativeLayout>